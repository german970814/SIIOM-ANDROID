                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_grupo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
