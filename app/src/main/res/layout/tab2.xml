    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_send"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:elevation="16dp"
        app:backgroundTint="@color/colorAccent"
        app:layout_anchorGravity="end|bottom"
        app:layout_anchor="@id/scrollview"
        android:src="@mipmap/ic_create_white_24dp"
        android:visibility="visible"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_send3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:elevation="16dp"
        app:layout_anchorGravity="end|bottom"
        app:layout_anchor="@id/scrollview"
        app:backgroundTint="@color/success"
        android:src="@mipmap/ic_done_white_18dp"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_send2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:elevation="16dp"
        app:backgroundTint="@color/amber"
        app:layout_anchorGravity="end|bottom"
        app:layout_anchor="@id/scrollview"
        android:src="@mipmap/ic_close_white_24dp"
        android:visibility="gone"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:id="@+id/progress_tab2"
        android:visibility="gone"/>

