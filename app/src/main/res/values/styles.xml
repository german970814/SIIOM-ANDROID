<resources>
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!--//www.materiapalette.com-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--stylo para los edittexts-->
    <!--<style name="EditTextWhite" parent="TextAppearance.AppCompat">-->
    <style name="EditTextWhite" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_size_login</item>
        <item name="android:textColorPrimary">@color/colorSecondaryText</item>
        <item name="colorAccent">@color/colorSecondaryText</item>
        <item name="colorControlNormal">@color/colorSecondaryText</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--<style name="EditTextError" parent="TextAppearance.AppCompat">-->
    <style name="EditTextError" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/error</item>
        <item name="android:textSize">@dimen/text_size_login</item>
        <item name="android:textColorPrimary">@color/error</item>
        <item name="colorAccent">@color/error</item>
        <item name="colorControlNormal">@color/error</item>
        <item name="colorControlActivated">@color/error</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
